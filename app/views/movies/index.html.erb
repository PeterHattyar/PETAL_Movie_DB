<h1>!! Welcome To MovieLand !!</h1>

<%= form_with url: movies_path, method: :get, local: true do %>
  <label for="search">Search:</label>
  <%= text_field_tag :search, params[:search], placeholder: "Enter keyword..." %>
  <%= submit_tag "Search" %>
<% end %>

<h2>Now Screening:</h2>

<table>
  <tr>
    <th>Title</th>
    <th>Director</th>
    <th>Release</th>
    <th>Genre</th>
    <th></th>
  </tr>
 
  <% @movies.each do |movie| %>
    <tr>
      <td><%= movie.title %></td>
      <td><%= movie.director %></td>
      <td><%= movie.release %></td>
      <td><%= movie.genre %></td>
      <td><%= link_to 'Show', movie_path(movie) %></td>
      <td><%= link_to 'Edit', edit_movie_path(movie) %></td>
      <td><%= link_to "Delete", movie_path(movie), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  } %></td>
    </tr>
  <% end %>
</table>
<br>
<%= link_to 'Add New Movie', new_movie_path %>