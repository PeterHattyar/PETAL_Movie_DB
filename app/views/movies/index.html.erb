<h1>!! Welcome To MovieLand !!</h1>


<h2>Now Screening:</h2>

<table>
  <tr>
    <th>Title</th>
    <th>Director</th>
    <th>Release</th>
    <th>Genre</th>
    <th></th>
  </tr>
 
  <% @movies.each do |movie| %>
    <tr>
      <td><%= movie.title %></td>
      <td><%= movie.director %></td>
      <td><%= movie.release %></td>
      <td><%= movie.genre %></td>
      <td><%= link_to 'Show', movie_path(movie) %></td>
    </tr>
  <% end %>
</table>
<br>
<%= link_to 'Add New Movie', new_movie_path %>